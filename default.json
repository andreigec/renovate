{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":timezone(Australia/Melbourne)",
    ":dependencyDashboard",
    ":rebaseStalePrs"
  ],
  "packageRules": [
    {
      "groupName": "all",
      "matchPackagePatterns": ["*"],
      "automerge": true
    },
    {
      "groupName": "node fetch",
      "matchPackagePatterns": ["@types/node-fetch", "node-fetch"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "groupName": "emotion",
      "matchPackagePatterns": ["@emotion/react"],
      "matchCurrentVersion": "11.11.4",
      "enabled": false
    },
    {
      "groupName": "next",
      "matchPackagePatterns": ["next"],
      "matchCurrentVersion": "14.1.0",
      "enabled": false
    },
    {
      "groupName": "in house",
      "matchPackagePatterns": ["^ag-", "^analytica.click"],
      "matchPackageNames": ["eslint-config-e7npm", "surveyfoundry.com"],
      "schedule": "before 7am"
    }
  ],
  "postUpdateOptions": ["pnpmDedupe"],
  "prConcurrentLimit": 1,
  "prNotPendingHours": 1,
  "minimumReleaseAge": "0 days",
  "semanticCommitType": "deps",
  "schedule": "before 7am on sunday",
  "recreateWhen": "always",
  "automerge": true,
  "automergeType": "branch",
  "assignees": ["andreigec@hotmail.com"]
}
