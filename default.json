{
  "extends": [
    ":timezone(Australia/Melbourne)",
    ":dependencyDashboard",
    ":rebaseStalePrs"
  ],
  "packageRules": [
    {
      "groupName": "all",
      "matchPackagePatterns": ["*"],
      "automerge": true
    },
    {
      "groupName": "node fetch",
      "matchPackagePatterns": ["@types/node-fetch", "node-fetch"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    }
  ],
  "postUpdateOptions": ["yarnDedupeHighest"],
  "prConcurrentLimit": 1,
  "prHourlyLimit": 1,
  "prNotPendingHours": 1,
  "rangeStrategy": "auto",
  "semanticCommitType": "deps",
  "schedule": "before 7am",
  "recreateClosed": true,
  "automergeType": "branch",
  "automerge": true,
  "assignees": ["andreigec@hotmail.com"]
}
